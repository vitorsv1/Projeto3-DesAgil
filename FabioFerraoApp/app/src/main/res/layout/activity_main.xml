<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- No RelativeLayout, podemos usar centerHorizontal e centerVertical
         para posicionar uma componente da interface exatamente no centro. -->
    <Button android:id="@+id/button_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="SMS" />

    <!-- No RelativeLayout, podemos usar below para posicionar uma componente
         usando outra componente como referência. Essa é a razão do nome! -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_sms"
        android:textAlignment="center"
        android:text="clique para entrar\nna tela de envio" />

</RelativeLayout>